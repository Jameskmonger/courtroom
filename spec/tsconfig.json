{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "moduleResolution": "classic",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../test-build/"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "defendant.spec.ts",
        "index.spec.ts",
        "laws/contains.spec.ts",
        "laws/is.spec.ts",
        "laws/matches.spec.ts",
        "laws/maxLength.spec.ts",
        "laws/minLength.spec.ts",
        "laws/not.spec.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
